{
  "name": "chromatone-helper",
  "description": "Helps learning to play and compose for the musical instrument Chromatone",
  "version": "1.0.0",
  "author": "Tommy Helm",
  "repository": {
    "type": "git"
  },
  "main": "main.js",
  "keywords": [
    "Chromatone",
    "music",
    "theory",
    "composing",
    "instrument",
    "harmony",
    "scale",
    "chord",
    "midi",
    "learn",
    "teach"
  ],
  "dependencies": {
    "browserify": "^16.2.3",
    "form-serialize": "^0.7.2",
    "midi-writer-js": "^1.5.1",
    "webaudio-tinysynth": "1.1.2"
  },
  "devDependencies": {
    "watchify": "^3.11.1"
  },
  "scripts": {
    "build": "browserify src/main.js > bundle.js && ./build/build-combined.sh",
    "watch": "watchify src/main.js -o bundle.js -v",
    "build_watch": "watchify src/main.js -o \"browserify src/main.js > bundle.js && ./build/build-combined.sh\" -v",
    "deploy": "browserify src/main.js > bundle.js && ./build/build-combined.sh && ./build/deploy-branch-on-github-pages.sh",
    "build_": "npm explore browserify -- npm run 'bin/cmd.js src/main.js > bundle.js"
  }
}
