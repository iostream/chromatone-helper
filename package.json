{
  "name": "chromatone-helper",
  "description": "Helps learning to play and compose for the musical instrument Chromatone",
  "version": "1.0.0",
  "author": "Tommy Helm",
  "repository": {
    "type": "git"
  },
  "main": "main.js",
  "keywords": [
    "Chromatone",
    "music",
    "theory",
    "composing",
    "instrument",
    "harmony",
    "scale",
    "chord",
    "midi",
    "learn",
    "teach"
  ],
  "dependencies": {
    "browserify": "^17.0.0",
    "midi-writer-js": "^2.1.4",
    "webaudio-tinysynth": "1.1.3"
  },
  "devDependencies": {
    "patch-package": "^6.5.1",
    "watchify": "^4.0.0"
  },
  "scripts": {
    "build": "browserify src/main.js > dist/bundle.js && ./build/build-combined.sh",
    "watch": "watchify src/main.js -o dist/bundle.js -v",
    "build_watch": "watchify src/main.js -o \"browserify src/main.js > dist/bundle.js && ./build/build-combined.sh\" -v",
    "deploy": "browserify src/main.js > dist/bundle.js && ./build/build-combined.sh && ./build/deploy-branch-on-github-pages.sh",
    "postinstall": "patch-package"
  }
}
